<Window x:Class="PCAGenerator.PCAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAGenerator"
        mc:Ignorable="d"
        Title="PCAWindow" Height="Auto" Width="Auto" Icon="pack://application:,,,/Images/PCA_ICON.ico"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="LightSteelBlue" Offset="0.0"/>
            <GradientStop Color="LightGreen" Offset="0.5"/>
            <GradientStop Color="LightSlateGray" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="ResultsTitle"
                   Text="PCA Results"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="0"/>

        <!-- Fix: Wrap the Image inside a ScrollViewer instead of using ScrollBar 
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1">
            <Image x:Name="PCAPlotImage" Stretch="Uniform"/>
        </ScrollViewer> 
        
        <ScrollViewer Name="ZoomScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto" Grid.Row="2" >
            <Grid>
                <Image x:Name="PCAPlotImage"
                       Stretch="None"
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.LayoutTransform>
                        
                        <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                    </Image.LayoutTransform>
                </Image>
            </Grid>
        </ScrollViewer> -->

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Buttons row -->
                <RowDefinition Height="*"/>
                <!-- Image row -->
            </Grid.RowDefinitions>

            <!-- Zoom controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5" Grid.Row="0">
                <Button Content="Zoom In" Width="80" Margin="5" Click="ZoomIn_Click"/>
                <Button Content="Zoom Out" Width="80" Margin="5" Click="ZoomOut_Click"/>
                <Button Content="Reset" Width="80" Margin="5" Click="ZoomReset_Click"/>
            </StackPanel>

            <!-- Scrollable + Zoomable Image -->
            <ScrollViewer Name="ZoomScrollViewer"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto" Grid.Row="1">
                <Grid>
                    <Image x:Name="PCAPlotImage"
                   Stretch="None"
                   RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.LayoutTransform>
                            <!-- ScaleTransform controls zoom -->
                            <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                        </Image.LayoutTransform>
                    </Image>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Center"  Margin="0,0,0,0">
            <Button Content="Open Output Folder" Width="150" Click="OpenFolder_Click"  Margin="0,0,10,0"/>
            <Button Content="Modify" Width="150" Click="Modify_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Select samples to remove from the PCA analysis: " FontWeight="Bold" Margin="0,0,0,0" />


            <!-- Custom dropdown -->
            <Grid>
                <!-- This button acts like the ComboBox header -->
                <ToggleButton x:Name="DropDownButton" Content="Click Here!" 
                            Width="120" Margin="20,0,0,0"
                          Checked="DropDownButton_Checked" 
                          Unchecked="DropDownButton_Unchecked"/>

                <!-- Popup for multi-select -->
                <Popup x:Name="DropDownPopup" PlacementTarget="{Binding ElementName=DropDownButton}"
                   Placement="Bottom" StaysOpen="False">
                    <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                        <ScrollViewer MaxHeight="200">
                            <ListBox x:Name="ValuesListBox" SelectionMode="Multiple">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding}" 
                                              IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Border>
                </Popup>
            </Grid>


            <Button Content="Regenerate" Width="150" HorizontalAlignment="Center" 
                Margin="20,0,0,0" Click="Regenerate_Click"/>

            
        </StackPanel>
    </Grid>
</Window>
