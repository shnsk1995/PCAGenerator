<Window x:Class="PCAGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCAGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="PCA Plot Generator" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" >
                <Label Content="Data File:" Width="100"/>
                <TextBox x:Name="DataFileTextBox" Width="350" IsReadOnly="True"/>
                <Button Content="Browse" Width="80" Click="BrowseFile_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <Label Content="Group Variable:" Width="100"/>
                <TextBox x:Name="GroupVariableTextBox" Width="150" Text="Group"/>
                <Label Content="Shape Variable:" Width="100"/>
                <TextBox x:Name="ShapeVariableTextBox" Width="150" Text="Condition"/>
            </StackPanel>

            <CheckBox x:Name="ShowSampleNamesCheckBox" 
                      Content="Show Sample Names" 
                      IsChecked="True"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center"  Margin="0,20,0,0">
            <Button Content="Run PCA" Width="120" Click="RunPCA_Click"/>
            <Button Content="Exit" Width="120" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
